<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.angel.yourpacket.EnviarPaquete$PlaceholderFragment">



    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="49dp"
        android:text="Direccion de envio de paquete" />

    <com.google.android.gms.maps.MapView
        android:id="@+id/mapView3"
        android:layout_width="500dp"
        android:layout_height="250dp"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/siguiente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Siguiente"
        android:layout_marginLeft="230dp"
        android:layout_below="@+id/button5"
        android:layout_alignEnd="@+id/button5" />

    <ImageSwitcher
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_alignEnd="@+id/textView2"
        android:layout_below="@+id/mapView3"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="36dp"
        android:id="@+id/imageSwitcher" />

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:text="Elija"
        android:background="@color/colorPrimary"
        android:layout_alignTop="@+id/imageSwitcher"
        android:layout_toEndOf="@+id/imageSwitcher" />


</RelativeLayout>
